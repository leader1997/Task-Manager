{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "paths": {
      "src/*": ["src/*"] //recommended to inmplace src/* to @/*
    },

    "incremental": true,
    "skipLibCheck": true,
    "strict": false,
    "noImplicitAny": false,
  }
}
